@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Eliminar informacion";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;

}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Eliminar tu cuenta eliminará todos los registros de tu cuenta</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="contraseña actual" aria-required="true" placeholder="Ingresa tu contraseña" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Eliminar mi informacion</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
