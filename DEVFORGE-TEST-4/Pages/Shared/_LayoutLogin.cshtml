<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <div class="dashboard-layout">
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Dashboard</h2>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a href="#" class="active"><span class="nav-icon">📊</span> Dashboard</a></li>
                    <li><a href="#"><span class="nav-icon">📄</span> Pages</a></li>
                    <li><a href="#"><span class="nav-icon">🛒</span> Sales</a></li>
                    <li><a href="#"><span class="nav-icon">💬</span> Messages</a></li>
                    <li><a href="#"><span class="nav-icon">👤</span> Profile</a></li>
                    <li><a href="#"><span class="nav-icon">⚙️</span> Settings</a></li>
                    <li><a href="#"><span class="nav-icon">❓</span> Help</a></li>
                </ul>
            </nav>
        </aside>

        <main class="main-content-area">
            <header class="dashboard-header">
                <div>
                    <div class="breadcrumb">Pages / <span>Dashboard</span></div>
                    <h1>Dashboard</h1>
                </div>
                <div class="header-controls">
                    <input type="text" placeholder="Type here...">
                    <button class="icon-button" aria-label="Notifications">🔔</button>
                    @* <button class="signin-button">Sign in</button> *@
                    <partial name="_LoginPartial" />
                </div>
            </header>

            <section class="stats-cards">
                <div class="stat-card stat-card--orange">
                    <div class="card-icon">👤</div>
                    <div class="card-content">
                        <span class="stat-number">1600</span>
                        <span class="stat-label">Users Active</span>
                    </div>
                    <span class="stat-change positive">+55%</span>
                </div>
                <div class="stat-card stat-card--dark">
                    <div class="card-icon">🖱️</div>
                    <div class="card-content">
                        <span class="stat-number">357</span>
                        <span class="stat-label">Click Events</span>
                    </div>
                    <span class="stat-change positive">+124%</span>
                </div>
                <div class="stat-card stat-card--dark">
                    <div class="card-icon">🛒</div>
                    <div class="card-content">
                        <span class="stat-number">2300</span>
                        <span class="stat-label">Purchases</span>
                    </div>
                    <span class="stat-change positive">+15%</span>
                </div>
                <div class="stat-card stat-card--dark">
                    <div class="card-icon">👍</div>
                    <div class="card-content">
                        <span class="stat-number">940</span>
                        <span class="stat-label">Likes</span>
                    </div>
                    <span class="stat-change positive">+90%</span>
                </div>
            </section>

            <section class="dashboard-grid">
                <section class="projects-section card">
                    <div class="card-header">
                        <h2>Projects</h2>
                        <p class="subtitle">30 done this month</p>
                    </div>
                    <div class="projects-list-container">
                        <div class="projects-list">
                            <div class="project-header-row">
                                <span>COMPANIES</span>
                                <span>MEMBERS</span>
                                <span>BUDGET</span>
                                <span>COMPLETION</span>
                            </div>
                            <div class="project-row">
                                <div class="project-company" data-label="Company">
                                    <span class="project-icon"> M </span> Soft UI XD Version
                                </div>
                                <div class="project-members" data-label="Members">👤👤👤</div>
                                <div class="project-budget" data-label="Budget">$14,000</div>
                                <div class="project-completion" data-label="Completion">
                                    <div class="completion-info">
                                        <span class="percentage">61%</span>
                                    </div>
                                    <progress value="61" max="100"></progress>
                                </div>
                            </div>
                            <div class="project-row">
                                <div class="project-company" data-label="Company">
                                    <span class="project-icon"> A </span> Add Progress Track
                                </div>
                                <div class="project-members" data-label="Members">👤👤</div>
                                <div class="project-budget" data-label="Budget">$3,000</div>
                                <div class="project-completion" data-label="Completion">
                                    <div class="completion-info">
                                        <span class="percentage">10%</span>
                                    </div>
                                    <progress value="10" max="100"></progress>
                                </div>
                            </div>
                            <div class="project-row">
                                <div class="project-company" data-label="Company">
                                    <span class="project-icon"> F </span> Fix Platform Errors
                                </div>
                                <div class="project-members" data-label="Members">👤👤👤👤</div>
                                <div class="project-budget" data-label="Budget">Not set</div>
                                <div class="project-completion" data-label="Completion">
                                    <div class="completion-info">
                                        <span class="percentage completed">100%</span>
                                    </div>
                                    <progress class="completed" value="100" max="100"></progress>
                                </div>
                            </div>
                            <div class="project-row">
                                <div class="project-company" data-label="Company">
                                    <span class="project-icon"> L </span> Launch our Mobile App
                                </div>
                                <div class="project-members" data-label="Members">👤👤👤👤</div>
                                <div class="project-budget" data-label="Budget">$20,500</div>
                                <div class="project-completion" data-label="Completion">
                                    <div class="completion-info">
                                        <span class="percentage completed">100%</span>
                                    </div>
                                    <progress class="completed" value="100" max="100"></progress>
                                </div>
                            </div>
                            <div class="project-row">
                                <div class="project-company" data-label="Company">
                                    <span class="project-icon"> A </span> Add the New Pricing Page
                                </div>
                                <div class="project-members" data-label="Members">👤</div>
                                <div class="project-budget" data-label="Budget">$500</div>
                                <div class="project-completion" data-label="Completion">
                                    <div class="completion-info">
                                        <span class="percentage">25%</span>
                                    </div>
                                    <progress value="25" max="100"></progress>
                                </div>
                            </div>
                            <div class="project-row">
                                <div class="project-company" data-label="Company">
                                    <span class="project-icon"> R </span> Redesign New Online Shop
                                </div>
                                <div class="project-members" data-label="Members">👤👤</div>
                                <div class="project-budget" data-label="Budget">$2,000</div>
                                <div class="project-completion" data-label="Completion">
                                    <div class="completion-info">
                                        <span class="percentage">40%</span>
                                    </div>
                                    <progress value="40" max="100"></progress>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <aside class="sidebar-cards-section">
                    <section class="reviews-card card">
                        <div class="card-header">
                            <h2>Reviews</h2>
                        </div>
                        <div class="review-item">
                            <span class="review-label">Positive Reviews</span>
                            <span class="review-percentage">80%</span>
                            <div class="progress-bar-container">
                                <div class="progress-bar positive" style="width: 80%;"></div>
                            </div>
                        </div>
                        <div class="review-item">
                            <span class="review-label">Neutral Reviews</span>
                            <span class="review-percentage">17%</span>
                            <div class="progress-bar-container">
                                <div class="progress-bar neutral" style="width: 17%;"></div>
                            </div>
                        </div>
                        <div class="review-item">
                            <span class="review-label">Negative Reviews</span>
                            <span class="review-percentage">3%</span>
                            <div class="progress-bar-container">
                                <div class="progress-bar negative" style="width: 3%;"></div>
                            </div>
                        </div>
                        <p class="review-text">More than 1,800,000 developers used Creative Tim's products and over 700,000 projects were created.</p>
                        <button class="view-all-button">View all reviews</button>
                    </section>

                    <section class="orders-card card">
                        <div class="card-header">
                            <h2>Orders overview</h2>
                            <p class="subtitle positive-text">↑ 24% this month</p>
                        </div>
                        <ul class="orders-list">
                            <li class="order-item">
                                <span class="order-icon green">✔️</span>
                                <div class="order-details">
                                    <span class="order-title">$2400, Design changes</span>
                                    <span class="order-time">22 DEC 7:20 PM</span>
                                </div>
                            </li>
                            <li class="order-item">
                                <span class="order-icon red">➕</span>
                                <div class="order-details">
                                    <span class="order-title">New order #1832412</span>
                                    <span class="order-time">21 DEC 11 PM</span>
                                </div>
                            </li>
                            <li class="order-item">
                                <span class="order-icon blue">💻</span>
                                <div class="order-details">
                                    <span class="order-title">Server payments for April</span>
                                    <span class="order-time">21 DEC 9:34 PM</span>
                                </div>
                            </li>
                            <li class="order-item">
                                <span class="order-icon orange">💳</span>
                                <div class="order-details">
                                    <span class="order-title">New card added for order #4395133</span>
                                    <span class="order-time">20 DEC 2:20 AM</span>
                                </div>
                            </li>
                            <li class="order-item">
                                <span class="order-icon purple">🔑</span>
                                <div class="order-details">
                                    <span class="order-title">Unlock packages for development</span>
                                    <span class="order-time">18 DEC 4:54 AM</span>
                                </div>
                            </li>
                            <li class="order-item">
                                <span class="order-icon grey">📦</span>
                                <div class="order-details">
                                    <span class="order-title">New order #9583120</span>
                                    <span class="order-time">17 DEC</span>
                                </div>
                            </li>
                        </ul>
                    </section>
                </aside>
            </section>
        </main>
    </div>
    @RenderBody()
</body>
</html>
