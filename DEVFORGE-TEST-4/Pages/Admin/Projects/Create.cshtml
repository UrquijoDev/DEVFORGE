@page
@model DEVFORGE_TEST_4.Pages.Admin.Projects.CreateModel
@{
    Layout = "_LayoutLogin";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Nuevo Proyecto</h2>

        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Título del Proyecto</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProjectDTO.Title" />
                    <span asp-validation-for="ProjectDTO.Title" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Descripción</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="ProjectDTO.Description" rows="4"></textarea>
                    <span asp-validation-for="ProjectDTO.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label">Etiquetas</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="TagsAsString" rows="3" placeholder="Escribe las etiquetas separadas por comas, por ejemplo: html, css, react"></textarea>
                    <span class="text-muted">Separa cada etiqueta con una coma</span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Projects/Index" role="button">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
