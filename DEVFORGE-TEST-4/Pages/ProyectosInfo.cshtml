@page "{id:int}"
@model DEVFORGE_TEST_4.Pages.ProyectosInfoModel
@{
    Layout = "_Layout";
}

<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <section class="py-5">
            <div class="container px-5 my-3">
                <div class="row justify-content-center">
                    <div class="col-lg-10 col-xl-8 text-center">

                        <!-- Imagen del proyecto -->
                        <img class="img-fluid rounded-3 mb-4 shadow mx-auto d-block w-75"
                             src="@Url.Content(string.IsNullOrEmpty(Model.Project.ImageFileName)
                             ? "https://placehold.co/800x400?text=Sin+Imagen"
                             : $"~/img/Projects/{Model.Project.ImageFileName}")"
                             alt="@Model.Project.Title" />


                        <!-- Título -->
                        <h1 class="fw-bolder mb-3">@Model.Project.Title</h1>

                        <!-- Etiquetas -->
                        @if (Model.Project.ProjectTags.Any())
                        {
                            <div class="mb-1">
                                @foreach (var tag in Model.Project.ProjectTags.Select(pt => pt.Tag))
                                {
                                    <span class="badge bg-secondary me-2">@tag.Name</span>
                                }
                            </div>
                        }

                        <!-- Descripción -->
                        <p class="lead fw-normal text-muted text-break text-justify" style="white-space: pre-line;">
                            @Model.Project.Description
                        </p>

                        <!-- Botón volver -->
                        <div class="mt-4">
                            <a href="@Url.Page("/Proyectos")" class="btn btn-outline-primary">
                                ← Volver al portafolio
                            </a>
                        </div>


                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
