@page "{id:int}"
@model DEVFORGE_TEST_4.Pages.ProyectosInfoModel
@{
    Layout = "_Layout";
}

<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <section class="py-5">
            <div class="container px-5 my-4">
                <div class="row gx-5 align-items-center">
                    <!-- Imagen a la izquierda -->
                    <div class="col-lg-6 mb-4 mb-lg-0 d-flex justify-content-center">
                        <img class="img-fluid rounded shadow w-100"
                             src="@Url.Content(string.IsNullOrEmpty(Model.Project.ImageFileName)
                                 ? "https://placehold.co/800x500?text=Sin+Imagen"
                                 : $"~/img/Projects/{Model.Project.ImageFileName}")"
                             alt="@Model.Project.Title"
                             style="max-height: 400px; object-fit: cover;" />
                    </div>

                    <!-- Contenido a la derecha -->
                    <div class="col-lg-6">
                        <h1 class="fw-bolder mb-3">@Model.Project.Title</h1>

                        @if (Model.Project.ProjectTags.Any())
                        {
                            <div class="mb-3">
                                @foreach (var tag in Model.Project.ProjectTags.Select(pt => pt.Tag))
                                {
                                    <span class="badge bg-secondary me-2">@tag.Name</span>
                                }
                            </div>
                        }

                        <p class="lead text-muted text-break" style="white-space: pre-line;">
                            @Model.Project.Description
                        </p>

                        <a href="@Url.Page("/Proyectos")" class="btn btn-outline-primary mt-3">
                            ← Volver al portafolio
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
